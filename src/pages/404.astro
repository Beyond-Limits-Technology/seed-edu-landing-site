---
import Layout from "@layouts/Layout.astro";
---

<Layout title="404 | Not Found" hideFooter hideNavbar>
  <div
    class="w-full h-screen flex justify-center items-center
bg-[url('https://i.postimg.cc/8CRM1d38/404-bg.jpg')] bg-cover bg-center bg-no-repeat px-6"
  >
    <div class="flex flex-col items-center gap-4">
      <div>
        <img
          src="/assets/logos/seed-logo-black.png"
          alt="Seed Education"
          class="md:max-w-[200px] max-w-[180px] object-cover mb-6"
        />
      </div>
      <h1 class="sm:text-4xl text-3xl font-bold text-center">Page Not Found</h1>
      <p class="sm:text-lg text-base text-opacity-70 text-center">
        We couldn't find the page you were looking for
      </p>
      <a
        href="/"
        class="w-[200px] h-[50px] border border-black flex justify-center items-center mt-4"
      >
        Back to Home
      </a>
    </div>
  </div>
</Layout>
