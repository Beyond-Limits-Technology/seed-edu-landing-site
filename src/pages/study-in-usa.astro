---
import Layout from "../layouts/Layout.astro";
import Breadcrumb from "../components/common/Breadcrumb.astro"
import Content from "../components/studyInUSA/Content.astro";
---

<Layout title="SEED | Study In USA">
  <div class="relative h-[350px] overflow-hidden">
    <div
      class="absolute inset-0 bg-cover bg-[url('https://siviaggia.it/wp-content/uploads/sites/2/2021/03/Viaggi-USA-1.jpg')] bg-center bg- w-screen min-h-[350px] bg-no-repeat brightness-50"
    >
    </div>
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div
      class="absolute inset-0 flex flex-col justify-center items-center text-white"
    >
      <h1 class="sm:text-7xl text-center text-4xl font-bold">Study In USA</h1>
      <Breadcrumb routeName="Study In USA" link="study-in-usa" />
      <p class="sm:text-lg text-base mt-6 text-center">Empowering your Dreams towards a Bright Future</p>
    </div>
  </div>

  <Content />
</Layout>
