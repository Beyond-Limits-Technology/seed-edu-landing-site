---
import Layout from "../../../layouts/Layout.astro";
import Breadcrumb from "../../../components/common/Breadcrumb.astro";
import Content from "../../../components/student-essentials/student-accommodation/Content.astro";
---

<Layout title="Student Accomondation">
  <div class="relative h-[350px] overflow-hidden">
    <div
      class="absolute inset-0 bg-cover bg-[url('https://images.unsplash.com/photo-1522202176988-66273c2fd55f?q=80&w=1471&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] bg-center bg- w-screen min-h-[350px] bg-no-repeat brightness-50"
    >
    </div>
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div
      class="absolute inset-0 flex flex-col justify-center items-center text-white"
    >
      <h1 class="sm:text-7xl text-center text-4xl font-bold">
        Student Accomondation
      </h1>
      <Breadcrumb
        routeName="Student Accommodation"
        link="essentials/student-accommodation"
      />
      <p class="sm:text-lg text-base mt-6 text-center">
        Your Destination to New Friends, Quality Learning & Fun Weekends
      </p>
    </div>
  </div>
  <Content />
</Layout>
