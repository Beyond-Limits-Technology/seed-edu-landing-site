---
import Footer from "@components/common/Footer.astro";
import Navbar from "@components/common/Navbar";
import { ViewTransitions } from "astro:transitions";
interface Props {
  title: string;
  isNavbarActive?: boolean;
  hideNavbar?: boolean;
  hideFooter?: boolean;
}

const {
  title,
  isNavbarActive = false,
  hideNavbar = false,
  hideFooter = false,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Primary Meta Tags -->
    <title>SEED Education</title>
    <meta name="title" content="SEED Education" />
    <meta
      name="description"
      content="SEED Education was founded by a team of graduates from Australian universities, who have navigated the challenges and opportunities of their own education journeys, understand the concerns students may face."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.seededuau.com.au/" />
    <meta property="og:title" content="SEED Education" />
    <meta
      property="og:description"
      content="SEED Education was founded by a team of graduates from Australian universities, who have navigated the challenges and opportunities of their own education journeys, understand the concerns students may face."
    />
    <meta property="og:image" content="/assets/logos/seed-logo-golden.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://www.seededuau.com.au/" />
    <meta property="twitter:title" content="SEED Education" />
    <meta
      property="twitter:description"
      content="SEED Education was founded by a team of graduates from Australian universities, who have navigated the challenges and opportunities of their own education journeys, understand the concerns students may face."
    />
    <meta
      property="twitter:image"
      content="/assets/logos/seed-logo-golden.png"
    />

    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="font-inter">
    {!hideNavbar && <Navbar client:only active={isNavbarActive} />}

    <slot />

    {!hideFooter && <Footer />}
  </body>
</html>
