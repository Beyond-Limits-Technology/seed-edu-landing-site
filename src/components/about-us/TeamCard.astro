---
const { name, position, facebook, linkedin, image } = Astro.props;
---

<li
  class="rounded-2xl bg-gray-400 bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-10 px-8 py-10"
>
  <img
    class="mx-auto h-48 w-48 rounded-full object-cover md:h-56 md:w-56"
    src={image}
    alt="team member"
  />
  <h3 class="mt-6 text-base font-semibold leading-7 tracking-tight text-black">
    {name}
  </h3>
  <p class="text-sm leading-6 text-gray-700">{position}</p>
  <ul role="list" class="mt-6 flex justify-center gap-x-6">
    <li>
      <a href="#" class="text-gray-400 hover:text-gray-800">
        <span class="sr-only">Facebook</span>
        <svg
          class="h-5 w-5"
          fill="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
          ><path
            fill="currentColor"
            d="M12.001 2.002c-5.522 0-9.999 4.477-9.999 9.999c0 4.99 3.656 9.126 8.437 9.879v-6.988h-2.54v-2.891h2.54V9.798c0-2.508 1.493-3.891 3.776-3.891c1.094 0 2.24.195 2.24.195v2.459h-1.264c-1.24 0-1.628.772-1.628 1.563v1.875h2.771l-.443 2.891h-2.328v6.988C18.344 21.129 22 16.992 22 12.001c0-5.522-4.477-9.999-9.999-9.999z"
          ></path></svg
        >
      </a>
    </li>
    <li>
      <a href="#" class="text-gray-400 hover:text-gray-800">
        <span class="sr-only">LinkedIn</span>
        <svg
          class="h-5 w-5"
          fill="currentColor"
          viewBox="0 0 20 20"
          aria-hidden="true"
        >
          <path
            fill-rule="evenodd"
            d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z"
            clip-rule="evenodd"></path>
        </svg>
      </a>
    </li>
  </ul>
</li>
