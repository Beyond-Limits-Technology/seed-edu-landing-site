---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import getSortedPosts, { getSortedEvents } from "@utils/getSortedPosts";
const { title, image, event } = Astro.props;

const { Content } = await event.render();

const allEvents = await getCollection("events");
const sortedEvents = getSortedEvents(allEvents);

const relatedEvents = sortedEvents.filter((e) => e.id !== event.id);
---

<Layout title={event.data.title} isNavbarActive={true}>
  <main class="pt-12 pb-16 lg:pt-16 lg:pb-24 bg-white antialiased">
    <div class="flex justify-between px-4 mx-auto max-w-screen-xl">
      <article
        class="mx-auto w-full max-w-2xl format format-sm sm:format-base lg:format-lg format-blue mt-12"
      >
        <figure>
          <img src={event.data.image.url} alt="" class="rounded-xl" />
          <figcaption>{event.data.image.alt}</figcaption>
        </figure>
        <h2>{event.data.title}</h2>
        <article
          id="article"
          role="article"
          class="prose mx-auto mt-8 max-w-3xl"
        >
          <Content />
        </article>
      </article>
    </div>
  </main>

  <aside aria-label="Related articles" class="py-8 lg:py-24 bg-gray-50">
    <div class="px-4 mx-auto max-w-screen-xl">
      <h2 class="mb-8 ml-4 text-2xl font-bold text-gray-900">Related Events</h2>
      <div class="grid gap-12 sm:grid-cols-2 lg:grid-cols-4">
        {
          relatedEvents?.slice(0, 4).map((event) => {
            return (
              <article class="max-w-xs mx-auto">
                <a href="#">
                  <img
                    src={event.data.image.url}
                    class="mb-5 rounded-lg"
                    alt="Image 1"
                  />
                </a>
                <h2 class="mb-2 text-xl font-bold leading-tight text-gray-900">
                  <a href="#">{event.data.title}</a>
                </h2>
                <p class="mb-4 text-gray-500">{event.data.description}</p>
                <a
                  href={`/updates/events/${event.slug}`}
                  class="inline-flex items-center font-medium underline underline-offset-4 text-primary-600 dark:text-primary-500 hover:no-underline"
                >
                  Read in 2 minutes
                </a>
              </article>
            );
          })
        }
      </div>
    </div>
  </aside>
</Layout>
