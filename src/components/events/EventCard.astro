---
import Datetime from "../common/Datetime";
const { title, date, description, image, eventId, tags } = Astro.props;
---

<a href=`/updates/events/${eventId}`>
  <div
    class="w-full flex justify-between md:flex-row flex-col-reverse gap-4 items-center py-8 border-b border-black border-opacity-10 cursor-pointer"
  >
    <div
      class="relative aspect-[16/9] sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0"
    >
      <img
        src={image}
        alt={image?.alt || "events"}
        class="absolute inset-0 h-full w-full rounded-2xl bg-gray-50 object-cover"
      />
      <div
        class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"
      >
      </div>
    </div>

    <div class="flex flex-col gap-y-2">
      <p class="text-base text-gray-500">
        <Datetime pubDatetime={date} />
      </p>
      <h6 class="text-xl py-2 font-bold text-black">
        {title}
      </h6>
      <p class="text-base font-[400] text-gray-800">
        {description}
      </p>
      <a
        href=`/updates/events/${eventId}`
        class="w-[120px] py-2 text-md font-semibold bg-black text-white rounded flex justify-center items-center gap-2 group cursor-pointer"
      >
        <p
          class="translate-x-2 group-hover:translate-x-0 transition-all duration-300 ease-in-out"
        >
          Read More
        </p>
