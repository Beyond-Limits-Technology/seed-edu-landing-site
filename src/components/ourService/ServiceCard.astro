---
const {id, stepName, image, header, description, features } = Astro.props;
---

<div
  class="sticky top-24 rounded-t-[46px] border-t  bg-white px-5 py-10 sm:px-20  shadow-inner"
>
  <div class="mb-14 flex gap-8 text-2xl font-bold">
    <p>{id}</p>
    <p>{stepName}</p>
  </div>
  <div
    class="flex flex-col-reverse gap-8 sm:gap-20 lg:flex-row lg:items-center"
  >
    <div class="max-w-2xl">
      <img src={image} alt="" />
    </div>
    <div class="max-w-2xl">
      <h2 class="mb-4 text-2xl font-bold md:text-3xl">
        {header}
      </h2>
      <p class="ext-sm text-[#636262] sm:text-base">
        {description}
      </p>
      <ul role="list" class="pt-8 my-7 space-y-5 border-t border-gray-200">
        {features.map((feature) => (
            <li class="flex space-x-3">
                <!-- Icon -->
                <svg
                    class="flex-shrink-0 w-5 h-5 text-primary-600"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-base font-medium leading-tight text-slate-900"
                    >{feature}
                </span>
                </li>
        ))}
      </ul>
    </div>
  </div>
</div>
