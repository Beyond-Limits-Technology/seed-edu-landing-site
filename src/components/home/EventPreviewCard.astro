---
const { data } = Astro.props;
---

<div class="max-w-sm rounded overflow-hidden shadow-xl">
  <img class="w-full h-48 object-cover" src={data.image} alt="Event Image" />
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">{data.title}</div>
    <p class="text-gray-700 text-base">
      Date and Time: {data.date}
    </p>
    <p class="text-gray-700 text-base whitespace-normal">
      {data.description}
    </p>
  </div>
  <div class="px-6 py-4 mb-3">
    <a
      href="/events"
      class="bg-dark-500 hover:bg-dark-300 text-white font-bold py-2 px-4 rounded"
    >
      Learn More
    </a>
  </div>
</div>
